<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/rg_lead"
            android:layout_marginTop="16dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_lead_org"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Customer"/>
            <RadioButton
                android:id="@+id/rb_lead_prospect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Prospect"/>
        </RadioGroup>
        <EditText
            android:id="@+id/et_lead_orgName"
            android:hint="Organisation Name*"
            android:inputType="textPersonName"
            style="@style/et_main" />
        <EditText
            android:id="@+id/et_lead_contactName"
            android:hint="Contact Name*"
            android:inputType="textPersonName"
            style="@style/et_main" />
        <EditText
            android:id="@+id/et_lead_contactNumber"
            android:hint="Contact Number*"
            android:inputType="phone"
            style="@style/et_main" />
        <EditText
            android:id="@+id/et_lead_address"
            android:hint="Address"
            android:inputType="textPersonName"
            style="@style/et_main" />
        <EditText
            android:id="@+id/et_lead_email"
            android:hint="Email"
            android:inputType="textEmailAddress"
            style="@style/et_main" />
        <RelativeLayout
            style="@style/rl_spinner_main">
        <Spinner
            android:entries="@array/city_list"
            style="@style/spinner_main" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <RelativeLayout
            style="@style/rl_spinner_main">
        <Spinner
            android:entries="@array/lead_status"
            style="@style/spinner_main" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
        <EditText
            android:hint="Next Meeting Date"
            android:inputType="date"
            style="@style/et_main" />

        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold|italic"
                android:textSize="12dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Meeting Comments"
                android:layout_height="match_parent" />
            <TextView
                android:layout_marginTop="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold|italic"
                android:textSize="12dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/upload_image"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/bg_et"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <EditText
                android:id="@+id/et_lead_comments"
                android:gravity="start"
                android:padding="4dp"
                android:hint="Meeting Comments"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/bg_et"/>


            <ImageView
                android:id="@+id/iv_upload_lead"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_sales_photo_add"
                android:layout_height="match_parent" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_lead_submit"
            style="@style/btn_main"/>
    </LinearLayout>

</ScrollView>