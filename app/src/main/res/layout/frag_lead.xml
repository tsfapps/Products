<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/rg_lead"
            android:layout_marginTop="16dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:checked="true"
                android:id="@+id/rb_lead_org"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Customer"/>
            <RadioButton
                android:id="@+id/rb_lead_prospect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Prospect"/>
        </RadioGroup>


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_lead_orgNameLabel"
                android:layout_weight="1"
                android:text="Organisation Name*"
                style="@style/tv_report" />
            <TextView
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:hint="Contact Name*"
                style="@style/tv_report" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_lead_orgName"
                android:hint="Maskn Traders"
                android:inputType="textPersonName"
                style="@style/et_main"
                android:layout_weight="1"/>
            <EditText
                android:layout_weight="1"
                android:id="@+id/et_lead_contactName"
                android:hint="Rameez Akhtar"
                android:inputType="textPersonName"
                style="@style/et_main" />
        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:hint="Contact Number*"
                style="@style/tv_report" />
            <TextView
                android:layout_alignParentEnd="true"
                android:hint="Email*"
                style="@style/tv_report" />

        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_weight="1.5"
                android:id="@+id/et_lead_contactNumber"
                android:hint="9709080680"
                android:maxLength="10"
                android:inputType="phone"
                style="@style/et_main" />
            <EditText
                android:id="@+id/et_lead_email"
                android:hint="admin@gmail.com"
                android:inputType="textEmailAddress"
                style="@style/et_main"
                android:layout_weight="1"/>

        </LinearLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:hint="Whats App Number"
                style="@style/tv_report" />
            <TextView
                android:layout_alignParentEnd="true"
                android:hint="Land Line Number"
                style="@style/tv_report" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_weight="1"
                android:id="@+id/et_lead_whatsAppNo"
                android:hint="7004774488"
                android:maxLength="10"
                android:inputType="phone"
                style="@style/et_main" />
            <EditText
                android:layout_weight="1"
                android:id="@+id/et_lead_landLine"
                android:hint="0651-2807584"
                android:inputType="phone"
                style="@style/et_main" />
        </LinearLayout>





        <TextView
            android:hint="Next Meeting Date"
            style="@style/tv_report" />

            <TextView
                android:background="@drawable/bg_simple_ascent"
                android:id="@+id/tv_lead_nextMeetingDate"
                android:text="20 October 2087"
                android:textColor="@color/white"
                style="@style/et_main" />

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/tv_report"
                android:textSize="12dp"
                android:layout_weight="1"
                android:text="Meeting Comments"
                />
            <TextView
                android:layout_alignParentEnd="true"
                style="@style/tv_report"
                android:layout_weight="1"
                android:text="@string/upload_image" />

        </RelativeLayout>
        <LinearLayout
            android:background="@drawable/bg_et"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <EditText
                android:id="@+id/et_lead_comments"
                android:textSize="14sp"
                android:gravity="start"
                android:padding="4dp"
                android:hint="Meeting Comments"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/bg_et"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_sales_photo_add"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_upload_lead"
                    android:scaleType="fitXY"
                    android:padding="2dp"
                    android:layout_marginStart="-2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </FrameLayout>



        </LinearLayout>

        <Button
            android:id="@+id/btn_lead_submit"
            style="@style/btn_main"/>
    </LinearLayout>

</ScrollView>