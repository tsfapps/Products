        style="@style/spn_item_count"/>
    <TextView
        android:id="@+id/tvSum500"
        style="@style/tv_cash_label"
        android:text="0"/>

</LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            style="@style/ll_main">
            <TextView
                style="@style/tv_cash_label"
                android:text="200"/>
