<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:background="@drawable/bg_tv"
    android:gravity="center_vertical"
    android:elevation="22dp"
    app:cardCornerRadius="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <TextView
           style="@style/tv_report"
            android:text="Date"/>
        <TextView
           style="@style/tv_report"
            android:text="Vehicle Number"/>
        <TextView
            style="@style/tv_report"
            android:text="Vehicle Expense Type"/>
        <TextView
            style="@style/tv_report"
            android:text="Amount"/>
        <TextView
            style="@style/tv_report"
            android:text="Remarks"/>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_reportVehicleDate"
           style="@style/tv_report"
            android:text="Date"/>
            <TextView
                android:id="@+id/tv_reportVehicleNumber"
                style="@style/tv_report"
                android:text="Vehicle Number"/>
            <TextView
            android:id="@+id/tv_reportVehicleExpense"
            style="@style/tv_report"
            android:text="Vehicle Expense Type"/>
        <TextView
            android:id="@+id/tv_reportVehicleAmount"
            style="@style/tv_report"
            android:text="Amount"/>
        <TextView
            android:id="@+id/tv_reportVehicleRemarks"
            style="@style/tv_report"
            android:text="Remarks"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>