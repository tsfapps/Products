<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="@dimen/dimen_8dp"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnGetLocation"
        style="@style/btn_main"
        android:layout_width="match_parent"
        android:fontFamily="serif-monospace"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_16dp"
        android:text="Update Shop Details" />
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRouteActivityShopName"
            style="@style/tv_report"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:gravity="center"
            android:text="Shop Name"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <LinearLayout
        android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_width="match_parent"
        android:layout_height="0dp"
            android:layout_weight="3.5">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            style="@style/card_dash">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvStatusNoActivity"
                style="@style/tv_cross"
                />
            <LinearLayout
                android:id="@+id/ll_RouteNoActivity"
                style="@style/ll_dash">

                <ImageView
                    style="@style/iv_dashboard"
                    android:src="@drawable/ic_no_activity"
                    />
                <TextView
                    android:text="No Activity"
                    style="@style/tv_dash_label" />
            </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            style="@style/card_dash">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvStatusOrder"
                style="@style/tv_cross"
                />
            <LinearLayout
                android:id="@+id/ll_route_new_order"
                style="@style/ll_dash">

                <ImageView
                    style="@style/iv_dashboard"
                    android:src="@drawable/dash_new_order"
                    />
                <TextView
                    android:id="@+id/tvRouteActivityOrder"
                    android:text="New Order"
                    style="@style/tv_dash_label" />
            </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            style="@style/card_dash">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvStatusRequest"
                    style="@style/tv_cross"
                    />

                <LinearLayout
                android:id="@+id/ll_route_special_request"
                style="@style/ll_dash">
                <ImageView
                    style="@style/iv_dashboard"
                    android:src="@drawable/dash_route_special_request"
                    />
                <TextView
                    android:text="Special Request"
                    style="@style/tv_dash_label" />

            </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            style="@style/card_dash">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvStatusSalesReturn"
                    style="@style/tv_cross"
                    />
                <LinearLayout
                android:id="@+id/ll_RouteSalesReturn"
                style="@style/ll_dash">
                <ImageView
                    style="@style/iv_dashboard"
                    android:src="@drawable/ic_return"/>
                <TextView
                    android:text="Sales Return"
                    style="@style/tv_dash_label" />
            </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            style="@style/card_dash">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvStatusReceipt"
                    style="@style/tv_cross"
                    />
                <LinearLayout
                android:id="@+id/ll_dash_receipt"
                style="@style/ll_dash">
                <ImageView
                    style="@style/iv_dashboard"
                    android:src="@drawable/dash_route_receipt"/>
                <TextView
                    android:text="Receipt"
                    style="@style/tv_dash_label" />
            </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            style="@style/card_dash">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvStatusFeedback"
                    style="@style/tv_cross"
                    />

                <LinearLayout
                android:id="@+id/ll_route_complain"
                style="@style/ll_dash">
                <ImageView
                    style="@style/iv_dashboard"
                    android:src="@drawable/ic_main_receipt"
                    />
                <TextView
                    android:text="@string/feedback_complain"
                    style="@style/tv_dash_label" />

            </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>




    </LinearLayout>
    </LinearLayout>
        <TextView
            android:id="@+id/tvAddressRouteActivity"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="1"
            android:padding="@dimen/dimen_4dp"
            android:textSize="@dimen/dimen_12sp"
            />

    </LinearLayout>
    </ScrollView>
</LinearLayout>