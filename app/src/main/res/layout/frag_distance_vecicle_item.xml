<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="@dimen/margin_top"
    android:elevation="@dimen/margin_top">

    <LinearLayout
        android:id="@+id/ll_vehicleList"
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp">
    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/main_logo"
        android:id="@+id/iv_pro_pic"
        android:background="@drawable/bg_iv"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_margin="@dimen/margin_top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<TextView
    android:id="@+id/tv_vehicleList_vehicleNumber"
    android:text="Vehicle Number"
    android:textSize="14sp"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:textAllCaps="true"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="wrap_content" />
<TextView
    android:id="@+id/tv_vehicleList_vehicleBrand"
    android:text="Vehicle Brand"
    android:textSize="12sp"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>