<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dimen_8dp"
    android:layout_marginStart="@dimen/dimen_8dp"
    android:layout_marginEnd="@dimen/dimen_8dp"
   app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    android:elevation="@dimen/dimen_8dp">
    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_product_title"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_product_list"
            android:textColor="@color/colorPrimaryDark"
            style="@style/tv_product_list"
            android:layout_weight=".3"/>
        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:text="Name"
            style="@style/tv_product_list" />


    </LinearLayout>
    <LinearLayout
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:text="Size"
            style="@style/tv_product_list" />
        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:text="5,6,7,8,9"
            style="@style/tv_product_list" />
        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:text="Quantity"
            style="@style/tv_product_list" />

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:text="0"
            style="@style/tv_product_list" />


    </LinearLayout>
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
   <LinearLayout
       android:orientation="vertical"
       android:gravity="center"
       android:layout_weight="1"
       android:layout_width="0dp"
       android:layout_height="wrap_content">
       <TextView
           android:textColor="@color/colorPrimaryDark"
           style="@style/color_product_list"
           android:background="@drawable/bg_color_black"/>

       <EditText
           android:id="@+id/et_product_list_black"
           style="@style/et_product_counter"/>
   </LinearLayout>
   <LinearLayout
       android:orientation="vertical"
       android:gravity="center"
       android:layout_weight="1"
       android:layout_width="0dp"
       android:layout_height="wrap_content">
       <TextView
           android:textColor="@color/colorPrimaryDark"
           style="@style/color_product_list"
           android:background="@drawable/bg_color_blue"/>

       <EditText
           android:id="@+id/et_product_list_blue"
           style="@style/et_product_counter"/>
   </LinearLayout>
   <LinearLayout
       android:orientation="vertical"
       android:gravity="center"
       android:layout_weight="1"
       android:layout_width="0dp"
       android:layout_height="wrap_content">
       <TextView
           android:textColor="@color/colorPrimaryDark"
           style="@style/color_product_list"
           android:background="@drawable/bg_color_white"/>
           <EditText
               android:id="@+id/et_product_list_white"
               style="@style/et_product_counter"/>


   </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>