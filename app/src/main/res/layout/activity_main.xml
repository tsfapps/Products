    <FrameLayout
        android:background="@color/grey"
        android:layout_below="@+id/ll_date_main"
        android:layout_above="@+id/ll_bottom_menu"
        android:id="@+id/container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/ll_bottom_menu"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_bottom_dashboard"
            android:src="@drawable/ic_bottom_dashboard"
            style="@style/iv_dash_bottom"/>
        <ImageView
            android:id="@+id/iv_bottom_report"
            android:src="@drawable/ic_bottom_report"
            style="@style/iv_dash_bottom"/>
        <RelativeLayout
            style="@style/iv_dash_bottom">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_bottom_task"
                android:src="@drawable/ic_bottom_task"
                style="@style/iv_dash_bottom"/>

            <TextView
                android:visibility="visible"
                android:layout_marginStart="-7dp"
                android:layout_toEndOf="@+id/iv_bottom_task"
                android:background="@drawable/bg_red_badge"
                android:id="@+id/tvBottomTaskBadge"
                android:text="1"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_bottom_profile"
            android:src="@drawable/ic_main_profile"
            style="@style/iv_dash_bottom"/>
    </LinearLayout>



