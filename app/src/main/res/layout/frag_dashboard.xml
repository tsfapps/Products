<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        style="@style/card_dash">
    <LinearLayout
        android:id="@+id/ll_dash_attendance"
        style="@style/ll_dash">
        <ImageView
            style="@style/iv_dashboard"
            android:src="@drawable/dash_attendance"
            />
        <TextView
            android:id="@+id/tv_dash_attendance"
            android:text="Attendance"
            style="@style/tv_dash_label" />

    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        style="@style/card_dash">
    <LinearLayout
        android:id="@+id/ll_dash_route"
        style="@style/ll_dash">
    <ImageView
        style="@style/iv_dashboard"
        android:src="@drawable/dash_today_route"
        />
    <TextView
        android:text="Today's Route"
        style="@style/tv_dash_label" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        style="@style/card_dash">
    <LinearLayout
        android:id="@+id/ll_dash_meeting"
        style="@style/ll_dash">
        <ImageView
            style="@style/iv_dashboard"
            android:src="@drawable/dash_meeting"
            />
        <TextView
            android:text="Meeting"
            style="@style/tv_dash_label" />

    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        style="@style/card_dash">
    <LinearLayout
        android:id="@+id/ll_dash_cash_collection"
        style="@style/ll_dash">
        <ImageView
            style="@style/iv_dashboard"
            android:src="@drawable/dash_cash_collection"
            />
        <TextView
            android:text="Cash Collection"
            style="@style/tv_dash_label" />

    </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        style="@style/card_dash">
        <LinearLayout
            android:id="@+id/ll_dash_distance"
            style="@style/ll_dash">
            <ImageView
                style="@style/iv_dashboard"
                android:src="@drawable/dash_dist_upload"
                />
            <TextView
                android:text="Distance Upload"
                style="@style/tv_dash_label" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        style="@style/card_dash">
        <LinearLayout
            android:id="@+id/ll_dash_lead_generation"
            style="@style/ll_dash">
            <ImageView
                style="@style/iv_dashboard"
                android:src="@drawable/dash_leads"
                />
            <TextView
                android:text="Lead Generation"
                style="@style/tv_dash_label" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        style="@style/card_dash">
        <LinearLayout
            android:id="@+id/ll_dash_cold_call"
            style="@style/ll_dash">
            <ImageView
                style="@style/iv_dashboard"
                android:src="@drawable/dash_cold_call"
                />
            <TextView
                android:text="Cold Call"
                style="@style/tv_dash_label" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        style="@style/card_dash">
        <LinearLayout
            android:id="@+id/ll_dash_expenses"
            style="@style/ll_dash">
            <ImageView
                style="@style/iv_dashboard"
                android:src="@drawable/dash_expenses"
                />
            <TextView
                android:text="Expenses"
                style="@style/tv_dash_label" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>