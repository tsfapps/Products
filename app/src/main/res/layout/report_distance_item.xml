<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:background="@drawable/bg_tv"
    android:gravity="center_vertical"
    android:elevation="22dp"
    app:cardCornerRadius="4dp"
    android:layout_marginStart=".5dp"
    android:layout_marginEnd=".5dp"
    android:layout_marginTop="1dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@color/white"
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_report_distance_date"
           style="@style/tv_report"
            android:textColor="@color/red"
            android:text="Date"/>
        <TextView
            android:id="@+id/tv_report_distance_startKm"
            style="@style/tv_color_content"
            android:text="1198km"
            android:textColor="@color/blue"
            android:drawableTint="@color/blue" />
        <TextView
            android:id="@+id/tv_report_distance_endKm"
            style="@style/tv_color_content"
            android:text="1203km"
            android:textColor="@color/colorAccent"
            android:drawableTint="@color/colorAccent"/>
        <TextView
            android:id="@+id/tv_report_distance_disTravelled"
            style="@style/tv_color_content"
            android:textColor="@color/tan_yellow"
            android:text="5km"
            android:drawableTint="@color/tan_yellow"/>
        <TextView
            android:id="@+id/tv_report_distance_totalDisTravelled"
            style="@style/tv_color_content"
            android:text="317km"
            android:textColor="@color/green"
            android:drawableTint="@color/green"/>


        </LinearLayout>
        <LinearLayout
            style="@style/ll_map_main">
            <TextView
                android:id="@+id/tvReportDistanceMap"
                style="@style/tv_map_main"

                />


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>