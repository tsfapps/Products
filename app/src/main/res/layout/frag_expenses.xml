<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
           style="@style/ll_expenses">
        <TextView
            android:text="Breakfast"
            style="@style/tv_expense_label" />
        <EditText
            android:id="@+id/et_breakfast"
            style="@style/et_expense_label" />
        </LinearLayout>
        <LinearLayout
           style="@style/ll_expenses">
        <TextView
            android:text="Lunch"
            style="@style/tv_expense_label" />
        <EditText
            android:id="@+id/et_lunch"
            style="@style/et_expense_label" />
        </LinearLayout>
        <LinearLayout
           style="@style/ll_expenses">
        <TextView
            android:text="Dinner"
            style="@style/tv_expense_label" />
        <EditText
            android:id="@+id/et_dinner"
            style="@style/et_expense_label" />
        </LinearLayout>
        <LinearLayout
           style="@style/ll_expenses">
        <TextView
            android:text="Mobile"
            style="@style/tv_expense_label" />
        <EditText
            android:id="@+id/et_mobile"
            style="@style/et_expense_label" />
        </LinearLayout>
        <LinearLayout
           style="@style/ll_expenses">
        <TextView
            android:text="Parking"
            style="@style/tv_expense_label" />
        <EditText
            android:id="@+id/et_parking"
            style="@style/et_expense_label" />
        </LinearLayout>
        <LinearLayout
           style="@style/ll_expenses">
        <TextView
            android:text="Road Toll Fees"
            style="@style/tv_expense_label" />
        <EditText
            android:id="@+id/et_road_toll"
            style="@style/et_expense_label" />
        </LinearLayout>
        <LinearLayout
           style="@style/ll_expenses">
        <TextView
            android:text="Petty"
            style="@style/tv_expense_label" />
        <EditText
            android:id="@+id/et_petty"
            style="@style/et_expense_label" />
        </LinearLayout>
        <LinearLayout
           style="@style/ll_expenses">
        <TextView
            android:text="Cash"
            style="@style/tv_expense_label" />
        <EditText
            android:id="@+id/et_cash"
            style="@style/et_expense_label" />
        </LinearLayout>
        <LinearLayout
           style="@style/ll_expenses">
        <TextView
            android:text="Vehicle Expenses"
            style="@style/tv_expense_label" />
        <EditText
            android:id="@+id/et_cleaning_items"
            style="@style/et_expense_label" />
        </LinearLayout>
        <LinearLayout
           style="@style/ll_expenses">
        <TextView
            android:text="Petrol"
            style="@style/tv_expense_label" />
        <EditText
            android:id="@+id/et_petrol"
            style="@style/et_expense_label" />
        </LinearLayout>
        <LinearLayout
           style="@style/ll_expenses">
        <TextView
            android:text="Others"
            style="@style/tv_expense_label" />
        <EditText
            android:id="@+id/et_others"
            style="@style/et_expense_label" />
        </LinearLayout>
        <LinearLayout
            style="@style/ll_expenses">
            <Button
                android:id="@+id/btn_total_expenses"
                android:background="@drawable/bg_btn_main"
                style="@style/tv_expense_label"
                android:text="Get Total Expense"
                android:gravity="center"
                android:textColor="@color/white"
                 />
            <TextView
               style="@style/et_expense_label"
                android:id="@+id/tv_total_expenses"/>
        </LinearLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="16dp"
            style="@style/tv_dash_label"
            android:text="Remark"/>
            <TextView
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                style="@style/tv_dash_label"
                android:text="@string/upload_image" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp">
        <EditText
            android:id="@+id/et_remark_expenses"
            android:background="@drawable/bg_et"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="start"
            android:padding="8dp"
            android:minLines="5"/>
        <ImageView
            android:id="@+id/iv_upload_expenses"
            android:background="@drawable/bg_et"
            android:layout_marginStart="-2dp"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:src="@drawable/ic_sales_photo_add"
            android:layout_height="match_parent" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_submit_expenses"
            style="@style/btn_main"/>
    </LinearLayout>
</ScrollView>