<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/sv_receipt"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:hint="Organisation Name*"
            android:inputType="textPersonName"
            style="@style/et_main" />
        <TextView
            android:hint="Customer Id*"
            style="@style/et_main" />
        <RelativeLayout
            style="@style/rl_spinner_main">
            <Spinner
                android:entries="@array/invoice_number"
                style="@style/spinner_main" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:hint="Invoice Date"
            style="@style/et_main" />
        <TextView
            android:hint="Total Outstanding Amount"
            style="@style/et_main" />
        <TextView
            android:hint="Total Invoice Amount"
            style="@style/et_main" />
        <EditText
            android:hint="Enter Received Amount*"
            android:inputType="numberDecimal"
            style="@style/et_main" />
        <TextView
            android:hint="Pending Outstanding Amount"
            style="@style/et_main" />
        <TextView
            android:layout_marginTop="16dp"
            style="@style/tv_dash_label"
            android:text="Cheque#"/>

        <EditText
            android:layout_marginTop="0dp"
            android:hint="Bank Name"
            style="@style/et_main" />
        <EditText
            android:hint="Cheque Number"
            style="@style/et_main" />

        <LinearLayout
            android:background="@drawable/bg_et"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_receipt_check_date"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Cheque Date"
                android:drawableEnd="@drawable/ic_calender"
                android:paddingEnd="32dp"
                android:paddingStart="32dp"
                android:layout_height="match_parent" />
<View
    android:background="@color/colorPrimaryDark"
    android:layout_width="1dp"
    android:layout_height="match_parent"/>
            <!--<TextView-->
                <!--android:id="@+id/tv_receipt_check_date_entry"-->
                <!--android:gravity="center"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@drawable/bg_tv"-->
                <!--/>-->
            <TextView
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold|italic"
                android:textSize="12dp"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:hint="@string/upload_image"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_upload_receipt"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:src="@drawable/ic_sales_photo_add"
                android:layout_height="match_parent" />

        </LinearLayout>
        <TextView
            android:layout_marginTop="16dp"
            style="@style/tv_dash_label"
            android:text="Signature"/>
        <RelativeLayout
            android:padding="2dp"
            android:background="@drawable/bg_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.kyanogen.signatureview.SignatureView
                xmlns:sign="http://schemas.android.com/apk/res-auto"
                android:id="@+id/signature_view_receipt"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                sign:penSize="3dp"
                sign:backgroundColor="@color/white"
                sign:penColor="@color/black"
                sign:enableSignature="true"/>
            <ImageView
                android:id="@+id/iv_receipt_clear_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_delete"
                android:layout_alignParentEnd="true"
                android:textAllCaps="false"/>

        </RelativeLayout>
        <Button
            android:id="@+id/btn_receipt_submit"
            style="@style/btn_main"/>
    </LinearLayout>

</ScrollView>