<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:background="@drawable/bg_tv"
    android:id="@+id/ll_route_item"
    android:gravity="center_vertical"
    android:elevation="22dp"
    app:cardCornerRadius="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_route_phone_no"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890"/>
        <TextView
            android:layout_below="@+id/iv_route_location"
                android:gravity="center_vertical"
                android:id="@+id/tv_route_shop_name"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:text="Shop Name"/>
            <ImageView
                android:id="@+id/iv_route_details"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_details"
                />
            <ImageView
                android:id="@+id/iv_route_location"
                android:layout_marginEnd="32dp"
                android:layout_toStartOf="@+id/iv_route_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location"
                />
            <Button
                android:layout_alignParentBottom="true"
                android:id="@+id/btn_route_visit_dispatcher"
                android:background="@drawable/bg_et"
                android:text="Visit"
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="false"
                android:layout_width="100dp"
                android:textSize="12sp"
                android:layout_height="30dp"
                android:layout_marginEnd="60dp"/>
            <Button
                android:id="@+id/btn_route_notVisit"
                android:layout_marginStart="60dp"
                android:background="@drawable/bg_et"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="Not to Visit"
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:layout_width="100dp"
                android:layout_height="30dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>