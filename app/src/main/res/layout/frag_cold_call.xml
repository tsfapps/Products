<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_meeting_orgName"
                android:hint="Organisation Name*"
                style="@style/tv_report" />
            <TextView
                android:layout_alignParentEnd="true"
                android:hint="Contact Name*"
                style="@style/tv_report" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_cold_orgName"
                android:inputType="textPersonName"
                style="@style/et_main"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/et_cold_contactName"
                android:inputType="textPersonName"
                style="@style/et_main"
                android:layout_weight="1"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <TextView
                style="@style/tv_report"
                android:hint="Contact Number*" />

            <TextView
                style="@style/tv_report"
                android:layout_alignParentEnd="true"
                android:hint="Email Id" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_cold_contactNumber"
                android:inputType="phone"
                android:maxLength="10"
                style="@style/et_main"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/et_cold_email"
                android:inputType="textEmailAddress"
                style="@style/et_main"
                android:layout_weight="1"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:hint="Land Line Number"
                style="@style/tv_report" />
            <TextView
                android:layout_alignParentEnd="true"
                android:hint="City"
                style="@style/tv_report" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_cold_landLine"
                android:inputType="phone"
                android:maxLength="12"
                style="@style/et_main"
                android:layout_weight="1"/>

            <EditText
                android:layout_weight="1"
                android:id="@+id/et_cold_city"
                android:inputType="textPersonName"
                style="@style/et_main"/>
        </LinearLayout>
        <TextView
            android:hint="Address"
            style="@style/tv_report" />
        <EditText
            android:id="@+id/et_cold_address"
            android:inputType="textPersonName"
            style="@style/et_main"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:hint="Next Meeting Date"
        style="@style/tv_report" />
    <TextView
        android:layout_alignParentEnd="true"
        android:hint="Select Route Name"
        style="@style/tv_report" />

</RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_coldCall_nextMeetingDate"
                android:layout_weight="1.5"
                android:text="20 October 1989"
                style="@style/tv_disable" />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_width="wrap_content"
                style="@style/rl_spinner_main">
                <Spinner
                    android:id="@+id/spnColdCallRoute"
                    style="@style/spinner_main"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </LinearLayout>

        <EditText
            android:layout_marginTop="@dimen/margin_8"
            android:minLines="5"
            android:id="@+id/et_cold_remarks"
            android:hint="Comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et"
            android:textSize="12sp"
            android:gravity="start"
            android:padding="4dp" />

        <Button
            android:id="@+id/btn_cold_submit"
            style="@style/btn_main"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>