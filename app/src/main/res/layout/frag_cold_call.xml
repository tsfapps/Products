<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
         <EditText
             android:id="@+id/et_cold_orgName"
            android:hint="Customer Name*"
            android:inputType="textPersonName"
            style="@style/et_main" />
        <EditText
            android:id="@+id/et_cold_contactName"
            android:hint="Contact Name*"
            android:inputType="textPersonName"
            style="@style/et_main" />
        <EditText
            android:id="@+id/et_cold_contactNumber"
            android:hint="Contact Number*"
            android:inputType="phone"
            style="@style/et_main" />
        <EditText
            android:id="@+id/et_cold_address"
            android:hint="Address"
            android:inputType="textPersonName"
            style="@style/et_main" />
        <EditText
            android:id="@+id/et_cold_email"
            android:hint="Email"
            android:inputType="textEmailAddress"
            style="@style/et_main" />
        <RelativeLayout
            style="@style/rl_spinner_main">
            <Spinner
                android:entries="@array/city_list"
                style="@style/spinner_main" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <RelativeLayout
            style="@style/rl_spinner_main">
            <Spinner
                android:entries="@array/cold_status"
                style="@style/spinner_main" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <EditText
            android:layout_marginTop="@dimen/margin_top"
            android:minLines="5"
            android:id="@+id/et_cold_remarks"
            android:hint="Cold Call Comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et"
            android:textSize="12sp"
            android:gravity="start"
            android:padding="4dp"
             />
        <Button
            android:id="@+id/btn_cold_submit"
            style="@style/btn_main"/>
    </LinearLayout>

</ScrollView>