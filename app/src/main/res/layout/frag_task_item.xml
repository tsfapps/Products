<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_taskStatusColor"
    android:background="@color/blue"
    android:gravity="center_vertical"
    android:elevation="22dp"
    android:padding="2dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="8dp"-->
                <!--android:background="@color/blue"/>-->

            <LinearLayout
                android:padding="@dimen/dimen_8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/tv_report"
                android:text="Task from"/>
            <TextView
                android:layout_centerHorizontal="true"
                style="@style/tv_report"
                android:text="Vendor Type"/>
            <TextView
                android:layout_alignParentEnd="true"
                style="@style/tv_report"
                android:text="Task Status"/>

        </RelativeLayout>


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_task_type"
                style="@style/tv_detail"
                android:text="Task Type"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/tvTaskVendorType"
                style="@style/tv_detail"
                android:text="Vendor Type"/>

            <TextView
                android:layout_alignParentEnd="true"
                android:id="@+id/tv_task_status"
                style="@style/tv_detail"
                android:text="Task Status"/>

        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/tv_report"
                android:text="Task Assigned Date"/>
            <TextView
                android:id="@+id/tv_task_dueDateLabel"
                android:layout_alignParentEnd="true"
                style="@style/tv_report"
                android:text="Task Due Date"/>

        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_task_assignedDate"
                style="@style/tv_detail"
                android:text="Task Assigned Date"/>

            <TextView
                android:layout_alignParentEnd="true"
                android:id="@+id/tv_task_dueDate"
                style="@style/tv_detail"
                android:text="Task Due Date"/>
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/tv_report"
                android:text="Contact Name"/>
            <TextView
                android:layout_alignParentEnd="true"
                style="@style/tv_report"
                android:text="Contact Number"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_task_contactName"
                style="@style/tv_detail"
                android:text="Contact Name"/>

            <TextView
                android:layout_alignParentEnd="true"
                android:id="@+id/tv_task_contactNumber"
                style="@style/tv_detail"
                android:text="Contact Number"/>

        </RelativeLayout>
        <TextView
            style="@style/tv_report"
            android:hint="Shop Name"/>
        <TextView
            android:id="@+id/tv_task_shopName"
            android:layout_width="match_parent"
            android:padding="2dp"
           style="@style/tv_detail"
            android:text="Shop Name"/>
                <TextView
            style="@style/tv_report"
            android:hint="Address"/>
        <TextView
            android:id="@+id/tv_task_address"
            android:layout_width="match_parent"
            android:padding="2dp"
           style="@style/tv_detail"
            android:text="Address"/>
        <TextView
            style="@style/tv_report"
            android:text="Remarks"/>
        <TextView
            android:id="@+id/tv_task_remarks"
           style="@style/tv_detail"
            android:text="Remarks"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <Button
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:id="@+id/btnTaskReschedule"
            style="@style/btn_main"
            android:text="Reschedule"
            />
        <Button
            android:layout_marginStart="@dimen/dimen_8dp"
            android:id="@+id/btnTaskCompleted"
            style="@style/btn_main"
            android:text="Complete Task"
            />
                </LinearLayout>


    </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>