<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/rg_meeting"
            android:layout_marginTop="16dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:checked="true"
                android:id="@+id/rb_meeting_customer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Customer"/>
            <RadioButton
                android:id="@+id/rb_meeting_prospect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Prospect"/>
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_meeting_orgName"
                android:hint="Organisation Name*"
                style="@style/tv_report" />
            <TextView
                android:layout_alignParentEnd="true"
                android:hint="Contact Name*"
                style="@style/tv_report" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_meeting_orgName"
            android:inputType="textPersonName"
            style="@style/et_main"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/et_meeting_contactName"
            android:inputType="textPersonName"
            style="@style/et_main"
            android:layout_weight="1"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:hint="Contact Number*"
                style="@style/tv_report" />
            <TextView
                android:layout_alignParentEnd="true"
                android:hint="WhatsApp Number"
                style="@style/tv_report" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_meeting_contactNumber"
                android:maxLength="10"
                android:inputType="phone"
                style="@style/et_main"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/et_meeting_whatsapp_no"
                android:maxLength="10"
                android:inputType="phone"
                style="@style/et_main"
                android:layout_weight="1"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:hint="Email Id"
                style="@style/tv_report" />
            <TextView
                android:layout_alignParentEnd="true"
                android:hint="Land line Number"
                style="@style/tv_report" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_meeting_email"
                android:inputType="textEmailAddress"
                style="@style/et_main"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/et_meeting_landLine"
                android:inputType="phone"
                style="@style/et_main"
                android:layout_weight="1"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:hint="Next Meeting Date"
                style="@style/tv_report" />
            <TextView
                android:layout_alignParentEnd="true"
                android:hint="Select Route"
                style="@style/tv_report" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_meeting_next_date"
                android:text="20 October 1989"
                android:layout_weight="1.5"
                style="@style/tv_disable" />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_width="wrap_content"
                style="@style/rl_spinner_main">
                <ProgressBar
                    android:id="@+id/pbSpnMeetingRoute"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <Spinner
                    android:id="@+id/spnMeetingRoute"
                    style="@style/spinner_main"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:text="Meeting Comments"
            style="@style/tv_report"
            />
        <TextView
            android:layout_alignParentEnd="true"
            style="@style/tv_report"
            android:text="@string/upload_image"
           />
        </RelativeLayout>
        <LinearLayout
            android:background="@drawable/bg_et"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <EditText
                android:id="@+id/et_meeting_remarks"
                android:gravity="start"
                android:padding="4dp"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:background="@drawable/bg_et"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_sales_photo_add"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_upload_meeting"
                    android:scaleType="fitXY"
                    android:padding="2dp"
                    android:layout_marginStart="-2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </FrameLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_meeting_submit"
            style="@style/btn_main"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>