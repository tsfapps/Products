<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/rg_meeting"
            android:layout_marginTop="16dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:checked="true"
                android:id="@+id/rb_meeting_customer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Customer"/>
            <RadioButton
                android:id="@+id/rb_meeting_prospect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Prospect"/>
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_meeting_orgName"
                android:hint="Organisation Name*"
                style="@style/tv_report" />
            <TextView
                android:layout_alignParentEnd="true"
                android:hint="Contact Name*"
                style="@style/tv_report" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_meeting_orgName"
            android:hint="Masakn Traders"
            android:inputType="textPersonName"
            style="@style/et_main"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/et_meeting_contactName"

            android:hint="Numan Ahmed"
            android:inputType="textPersonName"
            style="@style/et_main"
            android:layout_weight="1"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:hint="Contact Number*"
                style="@style/tv_report" />
            <TextView
                android:layout_alignParentEnd="true"
                android:hint="WhatsApp Number"
                style="@style/tv_report" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_meeting_contactNumber"
                android:hint="9709080680"
                android:maxLength="10"
                android:inputType="phone"
                style="@style/et_main"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/et_meeting_whatsapp_no"
                android:hint="7004774488"
                android:maxLength="10"
                android:inputType="phone"
                style="@style/et_main"
                android:layout_weight="1"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:hint="Email Id"
                style="@style/tv_report" />
            <TextView
                android:layout_alignParentEnd="true"
                android:hint="Land line Number"
                style="@style/tv_report" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_meeting_email"
                android:hint="ranchi@gmail.com"
                android:inputType="textEmailAddress"
                style="@style/et_main"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/et_meeting_landLine"
                android:hint="0651-2306825"
                android:inputType="phone"
                style="@style/et_main"
                android:layout_weight="1"/>
        </LinearLayout>
            <TextView
                android:layout_alignParentEnd="true"
                android:hint="Next Meeting Date"
                style="@style/tv_report" />

